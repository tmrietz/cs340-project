<div class="container">
    <h1>Create new system</h1>
    <form action="/system" method="post">
        Name:<br>
        <input class="form-control form-control-sm" type="text" name="name" required>
        <br>URL:<br>
        <input class="form-control form-control-sm" type="url" name="url" required><br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <h3>Current systems</h3>
    <h6>Note: Due to schema constraints on 'line', system deletions will do nothing if the system is related to a line</h6>
    <table class="table table-sm">
        <thead>
            <th>Name</th>
            <th>URL</th>
        </thead>
        <tbody>
            {{#each systems}}
            <tr>
                <td>{{name}}</td>
                <td>{{url}}</td>
                <td>
                    <div class="btn-group-sm">
                        <button class="btn btn-danger" onclick="deleteSystem({{id}})">Delete</button>
                        <a href="/system/{{id}}" >Update</a>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

